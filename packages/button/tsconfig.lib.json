{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/button",
    "tsBuildInfoFile": "../../dist/button/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  // Import env.d.ts on lib level since tsconfig.base.ts include is overridden.
  "include": ["**/*.ts", "../../env.d.ts"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "references": [
    {
      "path": "../common/tsconfig.lib.json"
    },
    {
      "path": "../../libs/styles/tsconfig.lib.json"
    }
  ]
}
